---
import NavLink from '@components/NavLink.vue';

interface Props {
  next?: string;
  previous?: string;
}

const {next, previous} = Astro.props;
---

<div class="flex flex-row w-full mt-8 font-normal text-4xl justify-between">
  <div>
    {
      previous && (
        <NavLink to={previous} rel="prev" prefetch={true}>
          Previous
        </NavLink>
      )
    }
  </div>

  <div>
    {
      next && (
        <NavLink to={next} rel="next" prefetch={true}>
          Next
        </NavLink>
      )
    }
  </div>
</div>
