---
const year = new Date().getFullYear();
const commit_ref = import.meta.env.COMMIT_SHA?.substring(0, 7) || "dev";
const commit_url = `${import.meta.env.GITHUB_SERVER_URL}/${import.meta.env.GITHUB_REPOSITORY}/commit/${import.meta.env.COMMIT_SHA}`;
---
<div class="mt-16 text-gray-300 dark:text-gray-700 font-light">
  &copy; {year} &bull;
  <a target="_blank" href={commit_url}>{commit_ref}</a>
</div>
